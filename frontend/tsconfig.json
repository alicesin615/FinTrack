{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@navigation/*": ["src/navigation/*"],
            "@screens/*": ["src/screens/*"],
            "@styles/*": ["src/styles/*"]
        },
        "allowImportingTsExtensions": true
    }
}
